<?xml version="1.0" encoding="UTF-8"?>

<openbox_config
	xmlns="http://openbox.org/3.4/rc"
	xmlns:xi="http://www.w3.org/2001/XInclude">

<keyboard>
	<keybind key="A-space">
		<action name="ShowMenu"><menu>client-menu</menu></action>
	</keybind>

	<keybind key="A-S-q">
		<action name="Exit">
			<prompt>no</prompt>
		</action>
	</keybind>

	<keybind key="A-S-t">
		<action name="Execute">
			<command>st</command>
		</action>
	</keybind>

	<keybind key="A-S-w">
		<action name="Execute">
			<command>chromium</command>
		</action>
	</keybind>

	<keybind key="A-Tab">
		<action name="NextWindow" />
	</keybind>

	<keybind key="A-S-Tab">
		<action name="PreviousWindow" />
	</keybind>
</keyboard>

<applications>
	<application class="*">
		<decor>no</decor>
	</application>
</applications>

</openbox_config>
